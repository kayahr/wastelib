{
    "$schema": "http://json.schemastore.org/package",
    "name": "@kayahr/wastelib",
    "version": "0.1.0",
    "type": "module",
    "description": "JavaScript library (Written in TypeScript) for reading the assets of the game Wasteland.",
    "keywords": [
        "Wasteland",
        "ALLHTDS1",
        "ALLHTDS2",
        "ALLPICS1",
        "ALLPICS2",
        "COLORF.FNT",
        "CURS",
        "END.CPA",
        "GAME1",
        "GAME2",
        "IC0_9.WLF",
        "MASKS.WLF",
        "TITLE.PIC"
    ],
    "license": "MIT",
    "author": "Klaus Reimer <k@ailis.de",
    "homepage": "https://github.com/kayahr/wastelib",
    "exports": "./lib/main/wastelib.js",
    "typings": "lib/main/wastelib.d.ts",
    "repository": {
        "type": "git",
        "url": "https://github.com/kayahr/wastelib.git"
    },
    "funding": "https://github.com/kayahr/wastelib?sponsor=1",
    "files": [
        "lib/main",
        "src/main"
    ],
    "scripts": {
        "clean": "rm -rf lib",
        "build": "run build:*",
        "build:compile": "tsc",
        "test": "run test:*",
        "test:lint": "oxlint --type-aware --deny-warnings",
        "test:apidoc": "typedoc --emit none",
        "test:spell": "cspell --no-progress --no-summary",
        "apidoc": "typedoc",
        "prepare": "run clean build"
    },
    "devDependencies": {
        "@kayahr/cspell": "9.3.2-bundle.1",
        "@kayahr/npm-utils": "1.1.1",
        "@kayahr/oxlint-config": "1.14.3",
        "@kayahr/typedoc": "0.28.14-bundle.3",
        "@types/node": "25.0.3",
        "typescript": "5.9.3"
    }
}
