{
  "$schema": "http://json.schemastore.org/package",
  "name": "wastelib",
  "version": "0.0.2",
  "description": "JavaScript library (Written in TypeScript) for reading the assets of the game Wasteland.",
  "keywords": [
    "Wasteland",
    "ALLHTDS1",
    "ALLHTDS2",
    "ALLPICS1",
    "ALLPICS2",
    "COLORF.FNT",
    "CURS",
    "END.CPA",
    "GAME1",
    "GAME2",
    "IC0_9.WLF",
    "MASKS.WLF",
    "TITLE.PIC"
  ],
  "homepage": "https://github.com/kayahr/wastelib",
  "author": {
    "name": "Klaus Reimer",
    "email": "k@ailis.de",
    "url": "https://github.com/kayahr/"
  },
  "license": "MIT",
  "main": "lib/main/wastelib",
  "typings": "lib/main/wastelib",
  "repository": {
    "type": "git",
    "url": "https://github.com/kayahr/wastelib.git"
  },
  "scripts": {
    "clean": "del-cli lib doc/api",
    "compile": "tsc",
    "watch": "tsc -w",
    "check": "cd src && jasmine",
    "doc": "typedoc --excludeNotExported --excludePrivate --mode file --out doc/api/ src/main node_modules/@types/",
    "webpack": "webpack",
    "lint": "tslint --project .",
    "prepare": "npm run -s clean && npm run -s compile && npm run -s webpack",
    "test": "npm run -s lint && npm run -s check"
  },
  "files": [
    "lib/main",
    "src/main"
  ],
  "directories": {
    "lib": "./lib/"
  },
  "devDependencies": {
    "@types/node": "^8.0.2",
    "@types/source-map-support": "^0.4.0",
    "del-cli": "^1.0.0",
    "jasmine": "^2.6.0",
    "source-map-loader": "^0.2.1",
    "systemjs": "^0.20.14",
    "tslint": "^5.4.3",
    "typedoc": "^0.7.1",
    "typescript": "^2.3.4",
    "webpack": "^3.0.0"
  },
  "dependencies": {
    "tslib": "^1.7.1"
  }
}
