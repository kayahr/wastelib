{
  "$schema": "http://json.schemastore.org/package",
  "name": "wastelib",
  "version": "0.0.1",
  "private": true,
  "description": "Library to read Wasteland game files",
  "keywords": [
    "wasteland"
  ],
  "license": "MIT",
  "main": "lib/main",
  "typings": "lib/main/wastelib",
  "repository": {
    "type": "git",
    "url": "https://github.com/kayahr/wastelib.git"
  },
  "scripts": {
    "clean": "del-cli lib doc",
    "compile": "tsc",
    "watch": "tsc -w",
    "check": "cd src && jasmine",
    "doc": "typedoc --excludeNotExported --excludePrivate --mode file --out doc/api/ src/main node_modules/@types/",
    "lint": "tslint --project .",
    "prepublish": "npm run -s clean && npm run -s compile",
    "test": "npm run -s lint && npm run -s check"
  },
  "files": [
    "lib",
    "src"
  ],
  "devDependencies": {
    "@types/es6-promise": "0.0.32",
    "@types/node": "^6.0.45",
    "del-cli": "^0.2.0",
    "jasmine": "~2.4.1",
    "systemjs": "^0.19.38",
    "tslint": "^3.15.1",
    "typedoc": "^0.5.0",
    "typescript": "^2.0.3"
  }
}
