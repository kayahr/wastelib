{
  "$schema": "http://json.schemastore.org/package",
  "name": "wastelib",
  "version": "0.0.2",
  "description": "JavaScript library (Written in TypeScript) for reading the assets of the game Wasteland.",
  "keywords": [
    "Wasteland",
    "ALLHTDS1",
    "ALLHTDS2",
    "ALLPICS1",
    "ALLPICS2",
    "COLORF.FNT",
    "CURS",
    "END.CPA",
    "GAME1",
    "GAME2",
    "IC0_9.WLF",
    "MASKS.WLF",
    "TITLE.PIC"
  ],
  "homepage": "https://github.com/kayahr/wastelib",
  "author": {
    "name": "Klaus Reimer",
    "email": "k@ailis.de",
    "url": "https://github.com/kayahr/"
  },
  "license": "MIT",
  "main": "lib/main",
  "typings": "lib/main/wastelib",
  "repository": {
    "type": "git",
    "url": "https://github.com/kayahr/wastelib.git"
  },
  "scripts": {
    "clean": "del-cli lib doc",
    "compile": "tsc",
    "watch": "tsc -w",
    "check": "cd src && jasmine",
    "doc": "typedoc --excludeNotExported --excludePrivate --mode file --out doc/api/ src/main node_modules/@types/",
    "webpack": "webpack",
    "lint": "tslint --project .",
    "prepublish": "npm run -s clean && npm run -s compile && npm run -s webpack",
    "test": "npm run -s lint && npm run -s check"
  },
  "files": [
    "lib/main",
    "src/main"
  ],
  "directories": {
    "lib": "./lib/"
  },
  "devDependencies": {
    "@types/es6-promise": "0.0.32",
    "@types/node": "^6.0.45",
    "@types/source-map-support": "^0.2.28",
    "del-cli": "^0.2.0",
    "jasmine": "~2.4.1",
    "source-map-loader": "^0.1.5",
    "systemjs": "^0.19.38",
    "tslint": "^3.15.1",
    "typedoc": "^0.5.0",
    "typescript": "^2.0.3",
    "webpack": "^1.13.2"
  }
}
