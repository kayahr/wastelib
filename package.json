{
    "$schema": "http://json.schemastore.org/package",
    "name": "@kayahr/wastelib",
    "version": "0.1.0",
    "type": "module",
    "description": "JavaScript library (Written in TypeScript) for reading the assets of the game Wasteland.",
    "keywords": [
        "Wasteland",
        "ALLHTDS1",
        "ALLHTDS2",
        "ALLPICS1",
        "ALLPICS2",
        "COLORF.FNT",
        "CURS",
        "END.CPA",
        "GAME1",
        "GAME2",
        "IC0_9.WLF",
        "MASKS.WLF",
        "TITLE.PIC"
    ],
    "license": "MIT",
    "author": "Klaus Reimer <k@ailis.de",
    "homepage": "https://github.com/kayahr/wastelib",
    "exports": "lib/main/wastelib.js",
    "typings": "lib/main/wastelib.d.ts",
    "repository": {
        "type": "git",
        "url": "https://github.com/kayahr/wastelib.git"
    },
    "funding": "https://github.com/kayahr/wastelib?sponsor=1",
    "files": [
        "lib/main",
        "src/main"
    ],
    "scripts": {
        "clean": "rimraf lib",
        "build": "run-s build:*",
        "build:compile": "tsc",
        "test": "run-s test:*",
        "test:lint": "eslint --max-warnings 0",
        "test:apidoc": "typedoc --emit none",
        "test:spell": "cspell --no-progress --no-summary",
        "apidoc": "typedoc",
        "prepare": "run-s clean build"
    },
    "devDependencies": {
        "@kayahr/eslint-config": "3.5.0",
        "@types/node": "24.0.7",
        "@types/source-map-support": "0.5.10",
        "cspell": "9.1.1",
        "npm-run-all": "4.1.5",
        "rimraf": "6.0.1",
        "source-map-loader": "5.0.0",
        "typedoc": "0.28.5",
        "typescript": "5.8.3"
    }
}
