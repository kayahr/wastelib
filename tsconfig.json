{
    "$schema": "http://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "rootDir": "src",
        "outDir": "lib",
        "noImplicitAny": true,
        "noEmitOnError": true,
        "sourceMap": true,
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictNullChecks": true,
        "noImplicitThis": true
    },
    "compileOnSave": true,
    "exclude": [
        "node_modules",
        "lib"
    ]
}
