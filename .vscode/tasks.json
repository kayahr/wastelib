{
    "version": "0.1.0",
    "command": "npm",
    "isShellCommand": true,
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "compile",
            "args": [ "run", "-s", "compile" ],
            "isBuildCommand": true,
            "showOutput": "silent",
            "problemMatcher": "$tsc"
        },
        {
            "taskName": "test",
            "args": [ "run", "-s", "check" ],
            "isTestCommand": true,
            "showOutput": "always"
        }
    ]
}
